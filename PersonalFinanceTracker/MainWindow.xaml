<Window x:Class="PersonalFinanceTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Personal Finance Tracker" Height="800" Width="1200" 
        WindowStartupLocation="CenterScreen" Background="#F8F9FA"
        FontFamily="Segoe UI" FontSize="12">

    <Window.Resources>
        <!-- Color Definitions -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2196F3"/>
        <SolidColorBrush x:Key="IncomeColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="ExpenseColor" Color="#F44336"/>
        <SolidColorBrush x:Key="BackgroundLight" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#212121"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#757575"/>

        <!-- DataGrid Styling with Alternating Rows -->
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0,1,0,0"/>
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Setter Property="Height" Value="40"/>
            <Style.Triggers>
                <Trigger Property="AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8F5E9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- Button Styling -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- TextBox Styling -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- ComboBox Styling -->
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- TabControl Styling -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Panel" Background="#F0F0F0" Margin="2,0,2,0" BorderThickness="0,0,0,3" BorderBrush="Transparent" Padding="25,14">
                            <ContentPresenter ContentSource="Header" VerticalAlignment="Center" HorizontalAlignment="Center" TextElement.FontSize="14" TextElement.FontWeight="SemiBold"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Panel" Property="Background" Value="White"/>
                                <Setter TargetName="Panel" Property="BorderBrush" Value="#2196F3"/>
                                <Setter TargetName="Panel" Property="TextElement.Foreground" Value="#2196F3"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Panel" Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#616161"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <StackPanel>
                <TextBlock Text="ðŸ’° Personal Finance Tracker" FontSize="28" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Track your income and expenses with ease" FontSize="12" Foreground="#B3E5FC" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content - Tab Based Layout -->
        <TabControl Grid.Row="1" Background="#F8F9FA" BorderThickness="0,2,0,0" BorderBrush="#E0E0E0">
            <!-- Transactions Tab -->
            <TabItem Header="ðŸ’³ Transactions">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20" Background="#F8F9FA">
                        <!-- Input Form Section -->
                        <Border Background="White" Margin="0,0,0,15" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0">
                            <StackPanel Margin="20">
                                <TextBlock Text="âž• Add New Transaction" FontSize="16" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,15"/>
                                
                                <!-- First Row -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="ðŸ“… Date:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold" Foreground="#212121" Width="80"/>
                                    <DatePicker x:Name="DateInput" Width="140" VerticalAlignment="Center" ToolTip="Select transaction date"/>
                                    
                                    <TextBlock Text="ðŸ“Œ Category:" VerticalAlignment="Center" Margin="20,0,10,0" FontWeight="Bold" Foreground="#212121" Width="150"/>
                                    <ComboBox x:Name="CategoryInput" Width="140" VerticalAlignment="Center" ToolTip="Choose a transaction category">
                                        <ComboBoxItem Content="Salary" IsSelected="True"/>
                                        <ComboBoxItem Content="Bonus"/>
                                        <ComboBoxItem Content="Investment"/>
                                        <ComboBoxItem Content="Gift"/>
                                        <ComboBoxItem Content="Other Income"/>
                                        <Separator/>
                                        <ComboBoxItem Content="Food"/>
                                        <ComboBoxItem Content="Rent"/>
                                        <ComboBoxItem Content="Transport"/>
                                        <ComboBoxItem Content="Entertainment"/>
                                        <ComboBoxItem Content="Utilities"/>
                                        <ComboBoxItem Content="Healthcare"/>
                                        <ComboBoxItem Content="Other"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Second Row -->
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ’µ Amount:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold" Foreground="#212121" Width="120"/>
                                    <TextBox x:Name="AmountInput" Width="100" Padding="8" VerticalAlignment="Center" ToolTip="Enter the transaction amount"/>
                                    
                                    <TextBlock Text="ðŸ“ Notes:" VerticalAlignment="Center" Margin="20,0,10,0" FontWeight="Bold" Foreground="#212121" Width="100"/>
                                    <TextBox x:Name="NotesInput" Width="200" Padding="8" VerticalAlignment="Center" ToolTip="Optional: Add transaction notes"/>
                                    
                                    <Button x:Name="AddButton" Content="âž• Add Transaction" Click="AddTransaction_Click" Style="{StaticResource PrimaryButtonStyle}" Margin="20,0,0,0" Padding="15,8" VerticalAlignment="Center" ToolTip="Click to add the transaction"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Search & Filter Section -->
                        <Border Background="White" Margin="0,0,0,15" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0">
                            <StackPanel Margin="20">
                                <TextBlock Text="ðŸ” Search &amp; Filter" FontSize="16" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,15"/>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="Keyword:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold" Foreground="#212121" Width="80"/>
                                    <TextBox x:Name="SearchKeywordInput" Width="200" Padding="8" VerticalAlignment="Center" ToolTip="Search by category or notes"/>
                                    
                                    <TextBlock Text="From Date:" VerticalAlignment="Center" Margin="20,0,10,0" FontWeight="Bold" Foreground="#212121" Width="80"/>
                                    <DatePicker x:Name="FilterFromDate" Width="140" VerticalAlignment="Center" ToolTip="Start date for filter"/>
                                    
                                    <TextBlock Text="To Date:" VerticalAlignment="Center" Margin="20,0,10,0" FontWeight="Bold" Foreground="#212121" Width="80"/>
                                    <DatePicker x:Name="FilterToDate" Width="140" VerticalAlignment="Center" ToolTip="End date for filter"/>
                                    
                                    <Button x:Name="FilterButton" Content="ðŸ”Ž Filter" Click="Filter_Click" Style="{StaticResource PrimaryButtonStyle}" Margin="20,0,10,0" Padding="12,8" VerticalAlignment="Center" ToolTip="Apply filters"/>
                                    <Button x:Name="ClearFilterButton" Content="âœ–ï¸ Clear" Click="ClearFilter_Click" Background="#9E9E9E" Foreground="White" Padding="12,8" VerticalAlignment="Center" Cursor="Hand" ToolTip="Clear all filters"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Transactions Grid Section -->
                        <Border Background="White" Margin="0,0,0,15" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0">
                            <StackPanel Margin="20">
                                <TextBlock Text="ðŸ“Š Recent Transactions" FontSize="16" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,15"/>
                                <DataGrid x:Name="TransactionsGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="False"
                                          GridLinesVisibility="Horizontal" BorderThickness="0" BorderBrush="Transparent" 
                                          RowStyle="{StaticResource {x:Type DataGridRow}}" AlternationCount="2"
                                          ColumnHeaderStyle="{StaticResource {x:Type DataGridColumnHeader}}" Height="280">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40" IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=yyyy-MM-dd}" Width="100" IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="120" IsReadOnly="True"/>
                                        <DataGridTemplateColumn Header="Amount" Width="100" IsReadOnly="True">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Amount, StringFormat='â‚¹ {0:N2}'}" Padding="5"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*" IsReadOnly="True"/>
                                        <DataGridTemplateColumn Header="Actions" Width="130" IsReadOnly="True">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="âœï¸ Edit" Click="EditTransaction_Click" Padding="8,4" Margin="2" Background="#2196F3" Foreground="White" FontSize="10" Cursor="Hand"/>
                                                        <Button Content="ðŸ—‘ï¸ Delete" Click="DeleteTransaction_Click" Padding="8,4" Margin="2" Background="#F44336" Foreground="White" FontSize="10" Cursor="Hand"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>

                        <!-- Transaction Log Section -->
                        <Border Background="White" Margin="0,0,0,0" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0">
                            <StackPanel Margin="20">
                                <TextBlock Text="ðŸ“‹ Transaction Log" FontSize="16" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,10"/>
                                <TextBox x:Name="LogTextBox" IsReadOnly="True" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" 
                                         Height="120" Background="#F5F5F5" Foreground="#212121" FontFamily="Consolas" FontSize="11" Padding="10"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Categories Tab -->
            <TabItem Header="ðŸ·ï¸ Categories">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20" Background="#F8F9FA">
                        <!-- Add Category Section -->
                        <Border Background="White" Margin="0,0,0,15" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0">
                            <StackPanel Margin="20">
                                <TextBlock Text="âž• Add New Category" FontSize="16" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,15"/>
                                
                                <!-- Add New Category Row -->
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Category Name:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold" Foreground="#212121" Width="100"/>
                                    <TextBox x:Name="NewCategoryNameInput" Width="120" Padding="8" VerticalAlignment="Center" ToolTip="Enter new category name"/>
                                    
                                    <TextBlock Text="Type:" VerticalAlignment="Center" Margin="15,0,10,0" FontWeight="Bold" Foreground="#212121" Width="40"/>
                                    <ComboBox x:Name="NewCategoryTypeInput" Width="100" VerticalAlignment="Center" ToolTip="Select category type">
                                        <ComboBoxItem Content="Income" IsSelected="True"/>
                                        <ComboBoxItem Content="Expense"/>
                                    </ComboBox>

                                    <TextBlock Text="Icon:" VerticalAlignment="Center" Margin="15,0,10,0" FontWeight="Bold" Foreground="#212121" Width="40"/>
                                    <TextBox x:Name="NewCategoryIconInput" Width="60" Padding="8" VerticalAlignment="Center" ToolTip="Enter emoji or icon (e.g., ðŸ’°)"/>
                                    
                                    <Button x:Name="AddCategoryButton" Content="âž• Add Category" Click="AddCategory_Click" Style="{StaticResource PrimaryButtonStyle}" Margin="15,0,0,0" Padding="12,8" VerticalAlignment="Center" ToolTip="Click to add new category"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Categories List Section -->
                        <Border Background="White" Margin="0,0,0,0" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0">
                            <StackPanel Margin="20">
                                <TextBlock Text="ðŸ“‘ Existing Categories" FontSize="16" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,15"/>
                                <DataGrid x:Name="CategoriesGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="False"
                                          GridLinesVisibility="Horizontal" BorderThickness="0" BorderBrush="Transparent" 
                                          RowStyle="{StaticResource {x:Type DataGridRow}}" AlternationCount="2"
                                          ColumnHeaderStyle="{StaticResource {x:Type DataGridColumnHeader}}" Height="400">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40" IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Icon" Binding="{Binding Icon}" Width="50" IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150" IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100" IsReadOnly="True"/>
                                        <DataGridTemplateColumn Header="Actions" Width="150" IsReadOnly="True">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="âœï¸ Edit" Click="EditCategory_Click" Padding="8,4" Margin="2" Background="#2196F3" Foreground="White" FontSize="10" Cursor="Hand"/>
                                                        <Button Content="ðŸ—‘ï¸ Delete" Click="DeleteCategory_Click" Padding="8,4" Margin="2" Background="#F44336" Foreground="White" FontSize="10" Cursor="Hand"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Graphs Tab -->
            <TabItem Header="ðŸ“Š Graphs">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20" Background="#F8F9FA">
                        <!-- Monthly Income vs Expense Line Chart -->
                        <Border Background="White" Margin="0,0,0,15" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0">
                            <StackPanel Margin="20">
                                <TextBlock Text="ðŸ“ˆ Monthly Income vs Expenses Trend" FontSize="16" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,15"/>
                                <oxy:PlotView x:Name="IncomeExpenseChart" Height="300" Background="White"/>
                            </StackPanel>
                        </Border>

                        <!-- Monthly Expense Distribution Pie Chart -->
                        <Border Background="White" Margin="0,0,0,0" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0">
                            <StackPanel Margin="20">
                                <TextBlock Text="ðŸ¥§ Monthly Expense Distribution by Category" FontSize="16" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,15"/>
                                <oxy:PlotView x:Name="ExpenseDistributionChart" Height="350" Background="White"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Summary Section -->
        <Border Grid.Row="2" Background="White" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Income Card -->
                <Border Grid.Column="0" Background="#E8F5E9" BorderThickness="1" BorderBrush="#4CAF50" CornerRadius="6" Margin="0,0,10,0" Padding="20">
                    <StackPanel>
                        <TextBlock Text="ðŸ’š Total Income" FontSize="12" FontWeight="Bold" Foreground="#2E7D32"/>
                        <TextBlock x:Name="IncomeLabel" Text="â‚¹0.00" FontSize="24" FontWeight="Bold" Foreground="#4CAF50" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Expenses Card -->
                <Border Grid.Column="1" Background="#FFEBEE" BorderThickness="1" BorderBrush="#F44336" CornerRadius="6" Margin="10,0,10,0" Padding="20">
                    <StackPanel>
                        <TextBlock Text="â¤ï¸ Total Expenses" FontSize="12" FontWeight="Bold" Foreground="#C62828"/>
                        <TextBlock x:Name="ExpenseLabel" Text="â‚¹0.00" FontSize="24" FontWeight="Bold" Foreground="#F44336" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Balance Card -->
                <Border Grid.Column="2" Background="#E3F2FD" BorderThickness="1" BorderBrush="#2196F3" CornerRadius="6" Margin="10,0,0,0" Padding="20">
                    <StackPanel>
                        <TextBlock Text="ðŸ’™ Balance" FontSize="12" FontWeight="Bold" Foreground="#1565C0"/>
                        <TextBlock x:Name="BalanceLabel" Text="â‚¹0.00" FontSize="24" FontWeight="Bold" Foreground="#2196F3" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>


